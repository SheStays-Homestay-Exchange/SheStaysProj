<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shestays.she_stays_proj.mapper.NationMapper">
    <resultMap id="nationMap" type="com.shestays.she_stays_proj.vo.NationVo">
        <result column="nation_id" property="nationId"/>
        <result column="nation_name" property="nationName"/>
        <result column="continent_id" property="continentId"/>
    </resultMap>
    <!-- 国家信息查询  -->
    <select id="getNation" resultMap="nationMap">
        select * from ss_nation 
    </select>
    <resultMap id="regionMap" type="com.shestays.she_stays_proj.vo.RegionVo">
        <result column="region_id" property="regionId"/>
        <result column="region_name" property="regionName"/>
        <result column="nation_id" property="nationId"/>
    </resultMap>
    <!-- 区域信息查询  -->
    <select id="getRegion" resultMap="regionMap" parameterType="java.lang.Integer">
        select * from ss_region where nation_id = #{nationId}
    </select>

    <!-- 城市查询 -->
    <resultMap id="cityMap" type="com.shestays.she_stays_proj.vo.CityVo">
        <result column="city_id" property="cityId"/>
        <result column="city_name" property="cityName"/>
        <result column="region_id" property="regionId"/>
    </resultMap>

    <select id="getCity" resultMap="cityMap" parameterType="java.lang.Integer">
        select * from ss_city where region_id = #{regionId}
    </select>
</mapper>
